package TestingGmail;

import org.openqa.selenium.By;
import org.openqa.selenium.WebDriver;
import org.openqa.selenium.WebElement;
import org.openqa.selenium.chrome.ChromeDriver;
import org.openqa.selenium.support.ui.Select;

public class RegistrationGmail {

	public static void main(String[] args) {
		
System.setProperty("webdriver.chrome.driver", "C:\\Program Files\\Selenium WebDriver\\ChromeDriver\\chromedriver-win32\\chromedriver.exe");

WebDriver driver = new ChromeDriver();

try {
	
	driver.get("https://signup.heroku.com/");
	driver.manage().window().maximize();
	driver.manage().timeouts();
	Thread.sleep(3000);
	
	driver.findElement(By.name("first_name")).sendKeys("Katarina");
	Thread.sleep(3000);
	
	driver.findElement(By.name("last_name")).sendKeys("YuJiMin");
	Thread.sleep(3000);
	
	driver.findElement(By.name("email")).sendKeys("fredrick.salim@ms.mii.co.id");
	Thread.sleep(3000);
	
	driver.findElement(By.name("company")).sendKeys("PT. BeMyAe");
	Thread.sleep(3000);
	
	WebElement country = driver.findElement(By.name("self_declared_country"));
	Select countries = new Select(country);
	countries.selectByValue("Indonesia");
	Thread.sleep(3000);
	
	WebElement newsletter = driver.findElement(By.name("receive_newsletter"));
	newsletter.click();
	Thread.sleep(3000);
	
	WebElement signUp = driver.findElement(By.name("signup"));
	signUp.click();
	Thread.sleep(3000);
	System.out.println("Registrasi Berhasil!!");
	

} catch (Exception e) {
	e.printStackTrace();
}


System.out.println("Judul Halaman: " + driver.getTitle());
System.out.println("Testing Berhasil Dilakukan!!");
driver.quit();

	}

}
